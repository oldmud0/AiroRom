\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{LayoutStyle}[2015/05/31 Thesis Layout Style]
\RequirePackage[T1]{fontenc}        % Output font
\RequirePackage[latin1]{inputenc}   % Input encoding
\RequirePackage{fancyhdr}           % Base layout

\newcommand{\fncyfront}{%
    \fancyhead[RO]{{\footnotesize\rightmark}}
    \fancyfoot[RO]{\thepage}
    \fancyhead[LE]{\footnotesize{\leftmark}}
    \fancyfoot[LE]{\thepage}
    \fancyhead[RE,LO]{}
    \fancyfoot[C]{}
    \renewcommand{\headrulewidth}{0.3pt}
}

\newcommand{\fncymain}{%
    \fancyhead[LO]{{\footnotesize\rightmark}}
    \fancyhead[RO]{\textbf{\thepage}}
    \fancyhead[RE]{{\footnotesize\leftmark}}
    \fancyhead[LE]{\textbf{\thepage}}
    \fancyfoot[C]{}
    \fancyfoot[RO,LE]{}
    \renewcommand{\headrulewidth}{0.3pt}
}

\def\cleardoublepage{\clearpage\if@twoside
\ifodd\c@page
\else\hbox{}\thispagestyle{empty}\newpage
\if@twocolumn\hbox{}\newpage\fi\fi\fi}

\newcommand{\includefigure}[3]{%
    \begin{figure}
        \centering
        \includegraphics{#3}
        \caption{#2}
        \label{#1}
    \end{figure}
}

% Make long acronym form in italics
% http://tex.stackexchange.com/questions/84974/can-the-acronym-package-be-told-to-use-a-certain-style
\renewcommand*{\acffont}[1]{\textit{#1}}
\renewcommand*{\acfsfont}[1]{\textnormal{#1}}

